#header_bar.row.hidden-xs.hidden-sm.visible-md.visible-lg

  .col-md-3
    %a{href: physicians_patients_path}
      = image_tag('puracap_logo.png', style: "height:75px")
  .col-md-1.col-lg-2

  #top_menu.col-md-8.col-lg-7
    %ul.nav.nav-pills{:style => "text-align: center;"}

      %li{:style => "width:120px;"}
        %a{href: physicians_orders_path, id: "prescription"}
          %span.sprite.sprite-bpCareConnect-icon-prescriptions{:style => "margin-left:auto;margin-right:auto;"}
        %small Order

      %li{:style => "width:120px;"}
        %a{href: physicians_orderhistories_path, id: "patients"}
          %span.sprite.sprite-bpCareConnect-icon-insurance{:style => "margin-left:auto;margin-right:auto;"}
        %small Order History

      %li{:style => "width:120px;"}
        %a{href: edit_physicians_physician_path(current_physicians_physician), id: "settings"}
          %span.sprite.sprite-bpCareConnect-icon-account-settings{:style => "margin-left:auto;margin-right:auto;"}
        %small Account Settings

      %li{:style => "width:120px;"}
        = link_to destroy_physicians_physician_session_path, method: "delete" do
          %span.sprite.sprite-bpCareConnect-icon-log-out{:style => "margin-left:auto;margin-right:auto;"}
        %small Logout