.row.visible-xs.visible-sm.hidden-md.hidden-lg

  .col-xs-12
    %a{href: physicians_patients_path}
      = image_tag('puracap_logo.png', style: "height:75px")

  #mobile_nav_bar.col-xs-12
    %ul.nav.nav-pills
      %li
        %a{href: physicians_orders_path, id: "prescription-mobile"}
          %span.sprite_mobile.sprite-bpCareConnect-icon-prescriptions-mobile{:style => "margin-left:auto;margin-right:auto;"}

      %li
        %a{href: physicians_orderhistories_path, id: "patients-mobile"}
          %span.sprite_mobile.sprite-bpCareConnect-icon-insurance-mobile{:style => "margin-left:auto;margin-right:auto;"}

      %li
        %a{href: edit_physicians_physician_path(current_physicians_physician), id: "settings-mobile"}
          %span.sprite_mobile.sprite-bpCareConnect-icon-account-settings-mobile{:style => "margin-left:auto;margin-right:auto;"}

      %li
        = link_to destroy_physicians_physician_session_path, method: "delete" do
          %span.sprite_mobile.sprite-bpCareConnect-icon-log-out-mobile{:style => "margin-left:auto;margin-right:auto;"}


