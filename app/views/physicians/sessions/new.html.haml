.row{:style => "margin:0 0 0 0;"}

.col-xs-12.col-md-6.col-md-offset-3

  = form_for(resource, :as => resource_name, :url => session_path(resource_name), :role => "form") do |f|
    = devise_error_messages!
    
    .panel.panel-default{:style => "margin-bottom:0;"}
      .panel-heading
        %h4
          Login
      .panel-body
      
        .form-group
          = f.label "DEA / NPI", style: "text-transform: uppercase"
          = f.text_field :username, :class => "form-control"

        .form-group
          = f.label :password
          = f.password_field :password, :class => "form-control"

      .panel-footer
        .row
          .col-xs-12.col-md-6
            = link_to 'Create Account', new_physicians_physician_registration_path, class: 'btn btn-warning btn-block new_button'
          .col-xs-12.col-md-6
            = f.submit "Login", class: "btn btn-primary btn-block new_button"
        .row
          .col-xs-12.col-md-4.col-md-offset-4
            = link_to "Forgot your password?", new_physicians_physician_password_path, class: "btn btn-link btn-block"

