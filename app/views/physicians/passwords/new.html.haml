.row{:style => "margin:0 0 0 0;"}


.col-xs-6.col-xs-offset-3

  = form_for(resource, :as => resource_name, :url => password_path(resource_name), :role => "form") do |f|
    = devise_error_messages!
    
    .panel.panel-default{:style => "margin-bottom:0;"}

      .panel-heading
        %h4
          Reset Password

      .panel-body

        .form-group
          = f.label "NPI / DEA", style: "text-transform: uppercase"
          = f.text_field :username, :class => "form-control"

      .panel-footer
        .row
          .col-xs-6
            = f.submit "Reset Password", class: "btn btn-primary btn-block new_button"
          .col-xs-6
            = link_to "Sign In", new_physicians_physician_session_path, class: "btn btn-primary btn-link btn-block"
          
