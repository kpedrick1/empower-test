.row{:style => "background-color:#f5f4f2;margin:0 0 0 0;"}
  .col-xs-12{:style => "background-color: rgba(194, 43, 36, 0.6);margin:0 15 0 15;"}
    .col-xs-12.col-sm-3{:style => "padding: 0 0 0 0;"}
      #page_title{:style => "background-color: #c22b24;"}
        %h5{:style => "color:white; line-height: 45px;margin:0 0 0 0;"} Order
    .col-sm-9.hidden-xs

  = render 'layouts/messages'

  .panel.panel-default{:style => "margin-bottom:0;"}
    .panel-body

      = form_tag do
        .row
          .col-xs-12

            .panel.panel-default

              .panel-heading
                %h4.panel-title Order Form

              .panel-body

                .table-responsive

                  %table.table.table-hover
                    %thead
                      %tr
                        %th Product
                        %th Cost /Case
                        %th Cases to Order
                        %th total Cost


                    - @order_line.each do |line|

                      %tr
                        %td
                          = line.productName
                        %td
                          = number_to_currency(line.productCost)
                        %td
                          = text_field_tag 'productline[][qty]', nil, size: 10
                          = hidden_field_tag 'productline[][productId]', line.productId
                        %td
                          = number_to_currency(0)


                      %tr
                        %td
                        %td
                        %td
                        %td

                      %tr
                        %td
                        %td
                        %td
                          %b
                            Total
                        %td
                          %b
                            =number_to_currency(0)
        .row
          .col-xs-12
            .col-xs-8
              .well
                A 10 case minimum is required to process Your Order
            .col-xs-4
              = submit_tag "Confirm Order", class: "btn btn-primary new_button"
              = submit_tag "Place Order", class: "btn btn-primary new_button"


:javascript

  $(function(){

    $("#inventories").addClass("active");
    $("#inventories-mobile").addClass("active");

  })

:css
  .modal {overflow-y: auto;}
  .modal-open {padding-right: 0 !important;}