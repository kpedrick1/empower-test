.row{:style => "margin:0 0 0 0;"}

.col-xs-12.col-md-6.col-md-offset-3

  = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :role => "form") do |f|
    = devise_error_messages!

    .panel.panel-default{:style => "margin-bottom:0;"}

      .panel-heading
        %h4
          Create Account
      .panel-body

      .panel-body

        .form-group
          = f.label "First Name"
          = f.text_field :firstname, :class => "form-control", :required => "true"

        .form-group
          = f.label "Last Name"
          = f.text_field :lastname, :class => "form-control", :required => "true"

        .form-group
          = f.label :phone
          = f.phone_field :phone, :class => "form-control", :required => "true", :autocomplete => "off"



        .form-group
          = f.label "Username / Email"
          = f.email_field :username, :class => "form-control", :required => "true"

        .form-group
          = f.label :password
          = f.password_field :password, :class => "form-control", :required => "true", :autocomplete => "off"

        .form-group
          = f.label :password_confirmation
          = f.password_field :password_confirmation, :class => "form-control", :required => "true"

        .form-group
          = f.label "I agree the to the "
          = link_to "End User Agreement", pages_eua_path, class: "btn btn-primary btn-link", style: "padding-left: 0px"

          = f.check_box :agreement, :class => "checkbox", :required => "true"



      .panel-footer
        .row
          .col-xs-12.col-md-6.button-hover
            = f.submit "Create Account", class: "btn btn-primary btn-block"
          .col-xs-12.col-md-6
            = link_to "Sign In", new_patients_patient_session_path, class: "btn btn-primary btn-link btn-block"


:css

    div.button-hover > input[type="submit"] {
         color:white;
         background-color:#ffc81f;
         font-weight:bold;
         border-style:none;
       }
    div.button-hover > input[type="submit"]:hover {
      background-color:#ffc81f;
      font-weight:bold;
      border-style:none;
      color:#333333;
   }
   div.button-hover > input[type="submit"]:focus {
            background-color:#ffc81f;
            font-weight:bold;
            border-style:none;
            color:#333333;
         }
   div.button-hover > input[type="submit"]:active {
         background-color:#ffc81f;
         font-weight:bold;
         border-style:none;
         color:#333333;
      }